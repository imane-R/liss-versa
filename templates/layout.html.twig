{% extends 'base.html.twig' %}
{% block body %}
  <header>
    <div class="phoneNum-mobile">
      <i class="fa-solid fa-phone"></i> &nbsp; 07 83 55 57 49
    </div>
    <nav class="navbar-css navbar navbar-expand-lg">
      <div class="container-fluid">
        <a class="logo navbar-brand" href="/">Liss&Versa</a>
