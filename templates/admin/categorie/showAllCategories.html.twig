{% extends 'layout.html.twig' %}

{% block title %}
  liste categorie admin
{% endblock %}

{% block content %}
  <table id="table">
    <thead>
      <tr>
        <th>Nom</th>
        <th>description</th>
        <th>image</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      {% for categorie in categories %}
        <tr>
          <td>{{ categorie.nom }}</td>
          <td>{{ categorie.description }}</td>
          <td>
            <img class="img-thumbnail" src="{{ asset('images/categories/' ~ categorie.image) }}" alt="{{ categorie.nom }}" />
          </td>

          <td>
            <a href="{{ path('admin_categorie_update', { slug: categorie.slug }) }}"><i class="fas fa-edit mx-1 text-primary"></i></a>
            <a href="{{ path('admin_categorie_delete', { slug: categorie.slug }) }}" onClick="return confirm('êtes vous sûr de vouloir supprimer la categorie ?')"><i class="fas fa-trash mx-1 text-danger"></i></a>
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
{% endblock %}
